<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/examColor"
    android:layout_margin="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/choose_difficulty_layout"
        android:orientation="horizontal"
        android:layout_margin="@dimen/distance"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/exam_choose_text"
            android:text="@string/difficulty_choose"
            android:gravity="center"
            android:textColor="@color/tabSelecterColor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>
        <Spinner
            android:id="@+id/difficulty_choose"
            android:spinnerMode="dropdown"
            android:entries="@array/difficulty"
            android:gravity="center"
            android:overScrollMode="never"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose_database_layout"
        android:orientation="horizontal"
        android:layout_above="@id/choose_difficulty_layout"
        android:layout_margin="@dimen/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/database_choose_text"
            android:text="@string/database_choose"
            android:gravity="center"
            android:textColor="@color/tabSelecterColor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>
        <Spinner
            android:id="@+id/database_choose"
            android:spinnerMode="dropdown"
            android:entries="@array/database"
            android:gravity="center"
            android:overScrollMode="never"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp">
        </Spinner>
    </LinearLayout>

    <Button
        android:id="@+id/start_exam"
        android:text="@string/start_exam"
        android:layout_below="@id/choose_difficulty_layout"
        android:layout_margin="@dimen/distance"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>






</RelativeLayout>
