<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:background="@color/seperatorColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/training_notification"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:background="@color/bg_color"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <ImageView
                android:id="@+id/day_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <!--<ImageView-->
                    <!--android:src="@drawable/news_logo"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="50dp"/>-->
                <com.sunfusheng.marqueeview.MarqueeView
                    android:id="@+id/news_show"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mvDirection="bottom_to_top"
                    app:mvGravity="center"
                    app:mvInterval="3000"
                    app:mvAnimDuration="1000"
                    app:mvTextColor="@color/colorPrimary"
                    app:mvTextSize="16sp"
                    app:mvSingleLine="true">
                </com.sunfusheng.marqueeview.MarqueeView>
            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/news_more"-->
                <!--android:text="@string/news_more"-->
                <!--android:gravity="center"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="30dp"/>-->

            <!--<TextView-->
                <!--android:id="@+id/interest_video"-->
                <!--android:layout_marginTop="@dimen/activity_vertical_margin"-->
                <!--android:gravity="center"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/colorPrimary"-->
                <!--android:text="@string/interest"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->
            <!--<cn.jzvd.JZVideoPlayerStandard-->
                <!--android:id="@+id/index_like"-->
                <!--android:layout_marginTop="@dimen/activity_vertical_margin"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="200dp"/>-->

            <LinearLayout

                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/index_rules"
                    android:background="#eeeeee"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/index_rules"
                    android:text="@string/rules"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/index_video"
                    android:background="#eeeeee"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:drawableEnd="@drawable/index_video"
                    android:text="@string/video"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/index_ppt"
                    android:layout_margin="4dp"
                    android:background="#eeeeee"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/index_ppt"
                    android:text="@string/powerpoint"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/index_error"
                    android:layout_margin="4dp"
                    android:background="#eeeeee"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:drawableEnd="@drawable/index_error"
                    android:text="@string/malfunction"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/index_sign"
                    android:layout_margin="4dp"
                    android:background="#eeeeee"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/index_sign"
                    android:text="@string/sign"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/index_suggestion"
                    android:layout_margin="4dp"
                    android:background="#eeeeee"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:drawableEnd="@drawable/index_suggestion"
                    android:text="@string/suggestion"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>